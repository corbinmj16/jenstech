        <div class="footer__top">
            <div class="footer__logo">
                <% if (is_home()) { %>
                    <%- image_tag(theme.logoWhite, { class: 'logo', alt: 'Jenstech official logo' }) %>
                <% } else { %>
                    <a href="/">
                        <%- image_tag(theme.logoWhite, { class: 'logo', alt: 'Jenstech official logo' }) %>
                    </a>
                <% } %>
                <p>A Charlotte, NC based web design and development company. Helping small businesses build an online presence.</p>
            </div>

            <ul class="footer__nav">
                <%- partial('./navigation') %>
            </ul>
        </div>
        <div class="footer__bottom">
            <div class="footer__copyright">
                <p>
                    Copyright Â© <%- date(Date.now(), 'YYYY') %> Jenstech. All rights reserved.
                </p>
            </div>
            <ul class="footer__socials">
                <li><i class="fab fa-linkedin"></i></li>
                <li><i class="fab fa-instagram"></i></li>
                <li><i class="fab fa-twitter-square"></i></li>
