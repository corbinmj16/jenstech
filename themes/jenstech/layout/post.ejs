<main class="post">
    <div class="post__image">
        <img src="<%- page.thumbnail %>" />
    </div>

    <header class="post-header">
        <div class="post-header__container">
            <h1 class="post-header__title"><%- page.title %></h1>
            <p class="post-header__date"><%- full_date(page.date, 'MMMM D, YYYY') %></p>
        </div>
    </header>

    <section class="post__container">
        <h2 class="post__subtitle"><%- page.subtitle %></h2>
        <div class="post__content">
            <%- page.content %>
        </div>
    </section>
</main>